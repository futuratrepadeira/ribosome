{
    "name": "@futuratrepadeira/ribosome",
    "version": "0.1.4",
    "description": "A library to help produce AppSync VTL templates using a simple object model",
    "license": "UNLICENSED",
    "author": "ola@uma.ni",
    "private": true,
    "repository": {
        "type": "git",
        "url": "git@github.com:futuratrepadeira/ribosome.git"
    },
    "bugs": {
        "url": "https://github.com/futuratrepadeira/ribosome/issues"
    },
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "prebuild": "yarn run clean",
        "build": "tsc",
        "postbuild": "yarn run prepdist",
        "clean": "rimraf -r dist",
        "prepdist": "node ./config/prepareDist.js",
        "lint": "eslint --fix '**/*.ts'",
        "test": "jest --config ./config/jest.config.js",
        "prerelease": "yarn run build && yarn run lint && yarn run test",
        "prepublish": "gh-release -y -w dist",
        "release": "cd dist && yarn publish --access public --frozen-lockfile"
    },
    "devDependencies": {
        "@types/jest": "26.0.14",
        "@types/node": "14.11.8",
        "@typescript-eslint/eslint-plugin": "4.4.1",
        "@typescript-eslint/parser": "4.4.1",
        "eslint": "7.11.0",
        "eslint-config-prettier": "6.12.0",
        "eslint-plugin-prettier": "3.1.4",
        "gh-release": "4.0.3",
        "jest": "26.5.3",
        "prettier": "2.1.2",
        "rimraf": "3.0.2",
        "ts-jest": "26.4.1",
        "typescript": "4.0.3"
    },
    "eslintConfig": {
        "parser": "@typescript-eslint/parser",
        "extends": [
            "plugin:@typescript-eslint/recommended",
            "prettier/@typescript-eslint",
            "plugin:prettier/recommended"
        ],
        "rules": {
            "curly": 2,
            "object-shorthand": [
                "error",
                "always"
            ],
            "import/no-unresolved": "off",
            "camelcase": "off",
            "@typescript-eslint/explicit-function-return-type": [
                "error",
                {
                    "allowExpressions": true
                }
            ],
            "@typescript-eslint/no-empty-interface": [
                "error",
                {
                    "allowSingleExtends": true
                }
            ],
            "@typescript-eslint/no-unused-vars": [
                "error",
                {
                    "argsIgnorePattern": "_"
                }
            ],
            "no-unused-vars": "off",
            "@typescript-eslint/no-use-before-define": [
                "error",
                {
                    "classes": false,
                    "functions": false
                }
            ],
            "@typescript-eslint/no-var-requires": "off",
            "@typescript-eslint/interface-name-prefix": "off"
        }
    },
    "prettier": {
        "arrowParens": "avoid",
        "semi": false,
        "trailingComma": "all",
        "singleQuote": false,
        "printWidth": 120,
        "tabWidth": 4
    },
    "publishConfig": {
        "access": "public"
    }
}
